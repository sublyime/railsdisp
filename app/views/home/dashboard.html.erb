        <div class="card-header">
          <h6><i class="fas fa-broadcast-tower"></i> Real-time Updates</h6>
        </div>
        <div class="card-body" id="real-time-controls">
          <div class="text-center mb-2">
            <span class="badge bg-success" id="connection-status">Connected</span>
          </div>
          <!-- Controls will be added by JavaScript -->
        </div>
      </div>

      <!-- Weather Panel -->
      <div class="card mb-3">
        <div class="card-header">
          <h6><i class="fas fa-cloud-sun"></i> Current Weather</h6>
        </div>
        <div class="card-body" id="weather-panel">
          <% if @current_weather %>
            <div class="text-center mb-3">
              <h4 class="text-primary"><%= @current_weather.temperature %>Â°C</h4>
              <p class="mb-1">
                <i class="fas fa-wind"></i> <%= @current_weather.wind_speed %> m/s 
                <small class="text-muted">(<%= wind_direction_text(@current_weather.wind_direction) %>)</small>
              </p>
              <p class="mb-1">
                <i class="fas fa-eye"></i> <%= @current_weather.humidity %>% humidity
              </p>
              <span class="badge bg-info"><%= @current_weather.stability_class %></span>
            </div>
          <% else %>
            <p class="text-muted text-center">No current weather data</p>
            <button class="btn btn-outline-primary btn-sm w-100" onclick="requestWeatherUpdate()">
              <i class="fas fa-sync"></i> Get Weather
            </button>
          <% end %>
          <!-- Weather controls will be added by JavaScript -->
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <div class="card-header">
          <h6><i class="fas fa-plus"></i> Quick Actions</h6>
        </div>
        <div class="card-body">
          <%= link_to "New Event", new_dispersion_event_path, class: "btn btn-success btn-sm w-100 mb-2" %>
          <%= link_to "Add Chemical", new_chemical_path, class: "btn btn-outline-primary btn-sm w-100 mb-2" %>
          <%= link_to "Add Location", new_location_path, class: "btn btn-outline-primary btn-sm w-100" %>
        </div>
      </div>

      <!-- Real-time Status Panel -->
      <div class="card mt-3">
        <div class="card-header">
          <h6><i class="fas fa-wifi"></i> Real-time Status</h6>
        </div>
        <div class="card-body">
          <div class="mb-2">
            <small class="text-muted">WebSocket:</small>
            <span id="websocketStatus" class="badge bg-warning">Connecting...</span>
          </div>
          <div class="mb-2">
            <small class="text-muted">Last Update:</small>
            <span id="lastUpdateTime" class="text-muted">Never</span>
          </div>
          <div class="d-grid gap-2">
            <button onclick="testWeatherBroadcast()" class="btn btn-outline-info btn-sm">
              <i class="fas fa-cloud"></i> Test Weather
            </button>
            <button onclick="testDispersionBroadcast()" class="btn btn-outline-warning btn-sm">
              <i class="fas fa-wind"></i> Test Plume
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Map Area -->
    <div class="col-lg-9 col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5><i class="fas fa-map-marked-alt"></i> Real-time Dispersion Map</h5>
          <div>
            <span class="badge bg-success" id="connectionStatus">Connected</span>
            <button class="btn btn-sm btn-outline-primary" onclick="toggleFullscreen()">
              <i class="fas fa-expand"></i>
            </button>
          </div>
        </div>
        <div class="card-body p-0">
          <!-- Map Container -->
          <div id="dispersionMap" style="height: 70vh; min-height: 500px;"></div>
          
          <!-- Map Legend -->
          <div id="mapLegend" class="position-absolute bottom-0 start-0 m-3 p-2 bg-white rounded shadow-sm" style="z-index: 1000;">
            <h6 class="mb-2">Concentration Levels (mg/mÂ³)</h6>
            <div class="d-flex flex-column">
              <div><span class="badge" style="background-color: #00ff00;">â– </span> 0.1 - Safe</div>
              <div><span class="badge" style="background-color: #ffff00;">â– </span> 1.0 - Caution</div>
              <div><span class="badge" style="background-color: #ff8800;">â– </span> 10.0 - Warning</div>
              <div><span class="badge" style="background-color: #ff0000;">â– </span> 100+ - Danger</div>
            </div>
            <small class="text-muted mt-2 d-block">
              Last Updated: <span id="lastUpdateTime">--:--</span>
            </small>
          </div>
        </div>
      </div>

      <!-- Recent Calculations -->
      <div class="card mt-3">
        <div class="card-header">
          <h6><i class="fas fa-calculator"></i> Recent Calculations</h6>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Event</th>
                  <th>Location</th>
                  <th>Max Concentration</th>
                  <th>Wind Conditions</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_calculations.each do |calc| %>
                  <tr>
                    <td>
                      <strong><%= calc.dispersion_event.chemical.name %></strong>
                    </td>
                    <td><%= calc.dispersion_event.location.name %></td>
                    <td>
                      <span class="badge bg-<%= calc.concentration > 10 ? 'danger' : calc.concentration > 1 ? 'warning' : 'success' %>">
                        <%= number_with_precision(calc.concentration, precision: 3) %> mg/mÂ³
                      </span>
                    </td>
                    <td>
                      <%= calc.weather_datum.wind_speed %> m/s, <%= calc.weather_datum.wind_direction %>Â°
                    </td>
                    <td>
                      <small class="text-muted">
                        <%= time_ago_in_words(calc.created_at) %> ago
                      </small>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Initialize Map and Real-time Updates -->
<script>
  // Pass server data to JavaScript early
  window.dashboardData = {
    activeEvents: <%= raw @events_data.to_json %>,
    currentWeather: <%= raw @current_weather&.to_json || 'null' %>
  };

  // Master initialization controller - prevents conflicts
  window.MapInitializationController = {
    isInitializing: false,
    isInitialized: false,
    pendingRetries: 0,
    maxRetries: 15,
    
    init: function() {
      if (this.isInitializing || this.isInitialized) {
        console.log('ðŸ”„ Map initialization already in progress or completed');
        return;
      }
      
      this.isInitializing = true;
      this.pendingRetries = 0;
      console.log('ðŸš€ Starting controlled map initialization...');
      
      this.attemptInitialization();
    },
    
    attemptInitialization: function() {
      const self = this;
      
      if (this.pendingRetries >= this.maxRetries) {
        console.error('âŒ Map initialization failed after maximum retries');
        this.isInitializing = false;
        return;
      }
      
      this.pendingRetries++;
      console.log(`ðŸ”„ Initialization attempt ${this.pendingRetries}/${this.maxRetries}`);
      
      // Step 1: Verify DOM container exists and is stable
      const container = document.getElementById('dispersionMap');
      if (!container) {
        console.log('â³ Map container not found, retrying...');
        setTimeout(() => self.attemptInitialization(), 300);
        return;
      }
      
      // Step 2: Verify container is visible and attached
      if (container.offsetParent === null || !container.isConnected) {
        console.log('â³ Map container not ready or attached, retrying...');
        setTimeout(() => self.attemptInitialization(), 300);
        return;
      }
      
      // Step 3: Verify Leaflet is loaded
      if (typeof L === 'undefined') {
        console.log('â³ Leaflet library not loaded, retrying...');
        setTimeout(() => self.attemptInitialization(), 200);
        return;
      }
      
      // Step 4: Verify initialization function is available
      if (typeof initializeDispersionMap !== 'function') {
        console.log('â³ Map initialization function not available, retrying...');
        setTimeout(() => self.attemptInitialization(), 200);
        return;
      }
      
      // Step 5: Wait for DOM stability (double-check container persists)
      setTimeout(() => {
        const finalContainer = document.getElementById('dispersionMap');
        if (!finalContainer || !finalContainer.isConnected) {
          console.log('âŒ Container disappeared during initialization, retrying...');
          setTimeout(() => self.attemptInitialization(), 300);
          return;
        }
        
        // Step 6: Clean up any existing map
        if (window.dispersionMap && window.dispersionMap.remove) {
          console.log('ðŸ§¹ Cleaning up existing map instance');
          try {
            window.dispersionMap.remove();
          } catch(e) {
            console.log('Note: Error removing existing map:', e.message);
          }
          window.dispersionMap = null;
        }
        
        // Step 7: Initialize the map
        try {
          console.log('ðŸ—ºï¸ Initializing dispersion map...');
          const success = initializeDispersionMap();
          
          if (success) {
            console.log('âœ… Dispersion map initialized successfully!');
            this.isInitialized = true;
            this.isInitializing = false;
            
            // Emit mapReady event for other systems
            const mapReadyEvent = new CustomEvent('mapReady', {
              detail: { 
                map: window.dispersionMap || window.map,
                timestamp: new Date().toISOString() 
              }
            });
            document.dispatchEvent(mapReadyEvent);
            console.log('ðŸ“¡ MapReady event dispatched');
            
            // Initialize supporting systems
            setTimeout(() => {
              if (typeof startRealTimeUpdates === 'function') {
                startRealTimeUpdates();
                console.log('âœ… Real-time updates started');
              }
              
              if (typeof initializeWeatherUpdates === 'function') {
                initializeWeatherUpdates();
                console.log('âœ… Weather updates initialized');
              }
            }, 500);
            
          } else {
            console.log('âŒ Map initialization returned false, retrying...');
            setTimeout(() => self.attemptInitialization(), 500);
          }
        } catch (error) {
          console.error('âŒ Error during map initialization:', error);
          setTimeout(() => self.attemptInitialization(), 500);
        }
      }, 150); // Brief stability wait
    },
    
    reset: function() {
      console.log('ðŸ”„ Resetting map initialization controller');
      this.isInitializing = false;
      this.isInitialized = false;
      this.pendingRetries = 0;
    }
  };
  
  // Single event handler for all Turbo events
  let initTimeout = null;
  
  function scheduleMapInitialization(delay = 400) {
    if (initTimeout) {
      clearTimeout(initTimeout);
    }
    
    initTimeout = setTimeout(() => {
      window.MapInitializationController.init();
    }, delay);
  }
  
  // Turbo events - consolidated handling
  document.addEventListener('turbo:load', function() {
    console.log('ðŸŽ¯ Turbo:load - scheduling map initialization');
    window.MapInitializationController.reset();
    scheduleMapInitialization(600);
  });
  
  document.addEventListener('turbo:render', function() {
    console.log('ðŸŽ¨ Turbo:render - DOM updated');
    window.MapInitializationController.reset();
    scheduleMapInitialization(400);
  });
  
  // Fallback for initial page load
  if (document.readyState === 'complete') {
    console.log('ðŸ“„ Document already ready, initializing immediately');
    scheduleMapInitialization(200);
  } else {
    document.addEventListener('DOMContentLoaded', function() {
      console.log('ðŸ“„ DOMContentLoaded event fired');
      if (!document.documentElement.hasAttribute('data-turbo-preview')) {
        scheduleMapInitialization(400);
      }
    });
  }
</script>

<script>
  // Global helper functions for dashboard
  window.requestWeatherUpdate = function() {
    if (window.weatherManager) {
      window.weatherManager.requestWeatherUpdate();
    } else {
      fetch('/weather/update_all', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          console.log('Weather update requested:', data);
          setTimeout(() => window.location.reload(), 2000);
        })
        .catch(error => console.error('Weather update failed:', error));
    }
  };

  // Real-time WebSocket test functions
  window.testWeatherBroadcast = function() {
    fetch('/test/weather_broadcast')
      .then(response => response.json())
      .then(data => {
        console.log('Weather broadcast test:', data);
        updateLastUpdateTime();
        showTestNotification('Weather update broadcast sent!');
      })
      .catch(error => {
        console.error('Weather broadcast test failed:', error);
      });
  };

  window.testDispersionBroadcast = function() {
    fetch('/test/dispersion_broadcast')
      .then(response => response.json())
      .then(data => {
        console.log('Dispersion broadcast test:', data);
        updateLastUpdateTime();
        showTestNotification('Dispersion plume update broadcast sent!');
      })
      .catch(error => {
        console.error('Dispersion broadcast test failed:', error);
      });
  };

  function updateLastUpdateTime() {
    const now = new Date().toLocaleTimeString();
    const timeElement = document.getElementById('lastUpdateTime');
    if (timeElement) {
      timeElement.textContent = now;
    }
  }

  function showTestNotification(message) {
    // Create a temporary notification
    const notification = document.createElement('div');
    notification.className = 'alert alert-success alert-dismissible fade show position-fixed';
    notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    notification.innerHTML = `
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    document.body.appendChild(notification);
    
    // Auto-remove after 3 seconds
    setTimeout(() => {
      if (notification.parentNode) {
        notification.parentNode.removeChild(notification);
      }
    }, 3000);
  }

  // Update WebSocket status indicators
  function updateWebSocketStatus(status) {
    const statusElement = document.getElementById('websocketStatus');
    if (statusElement) {
      statusElement.className = 'badge bg-' + (status === 'connected' ? 'success' : status === 'connecting' ? 'warning' : 'danger');
      statusElement.textContent = status.charAt(0).toUpperCase() + status.slice(1);
    }
  }

  // Monitor ActionCable connection status
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      if (window.ActionCableManager && window.ActionCableManager.isConnected()) {
        updateWebSocketStatus('connected');
      } else {
        updateWebSocketStatus('fallback');
      }
    }, 2000);
  });
</script>
